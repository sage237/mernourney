<% layout('/layouts/boilerplate') -%>
    <div class="row mt-3">
        <div class="col-6 offset-3">

            <form method="POST" action="/signup" class="needs-validation" novalidate>

                <div class="mb-3"><label for="title" class="form-label">Email</label>
                    <input id="title" type="text" name="email" placeholder="Email" class="form-control" required>
                    <div class="invalid-feedback">
                        Email Should Not be EMPTY.
                    </div>
                </div>

                <div class="mb-3"><label class="form-label" for="username">Username</label>
                    <input id="password" type="text" name="username" placeholder="Username" class="form-control" required>
                   <div class="invalid-feedback">
                    Required.
                  </div></div>

        <div class="mb-3">
            <label class="form-label" for="price" >Password</label>
            <input id="price" type="password" class="form-control"  name="password" placeholder="Password" required>
            <div class="invalid-feedback">
                Required!!
              </div></div>




        <button class="btn btn-primary" type="submit">submit</button>


    </form>

</div>

</div>